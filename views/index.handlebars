<h1>Eat-Da-Burger!</h1>

<h2>Burgers in waiting!</h2>

<ul>
  {{#each burgers}}
  {{#unless devour}}
  {{> burgers/burger-block devour=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2 class="float-right">Burgers Devoured!</h2>

<ul class="float-right">
  {{#each burgers}}
  {{#if devour}}
  {{> burgers/burger-block devour=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="burg">Burgers:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="dev">Devour?</label><br>
    <input type="radio" name="devour" value="1" id="devour" checked> Devoured!<br>
    <input type="radio" name="waiting" value="0" id="waiting"> Waiting
  </div>

  <button type="submit">Add Burger</button>
</form>